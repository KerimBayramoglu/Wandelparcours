<UserControl
    x:Class="DatabaseImporter.Views.Input"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatabaseImporter.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModelInterfaces="clr-namespace:DatabaseImporter.ViewModelInterfaces"
    d:DataContext="{d:DesignInstance viewModelInterfaces:IInputViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <ComboBox
                materialDesign:HintAssist.Hint="Source"
                ItemsSource="{Binding Sources}"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

            <TextBlock Text="File" />
            <Button Command="{Binding ChooseFileCommand}" Content="Bestand kiezen" />

            <TextBlock Text="Model" />
            <ComboBox
                materialDesign:HintAssist.Hint="Source"
                ItemsSource="{Binding ModelNames}"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        </StackPanel>
    </Grid>
</UserControl>
