<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DatabaseImporter.Views.Controls">

    <Style TargetType="{x:Type controls:ObjectBrowser}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ObjectBrowser}">
                    <ItemsControl ItemsSource="{TemplateBinding Value}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TreeViewItem Header="{Binding .}" ItemsSource="{Binding ., Converter={StaticResource ValueToPropertyListConverter}}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>