<Window
    x:Class="ModuleSettingsEditor.WPF.Views.ExportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModelInterfaces="clr-namespace:ModuleSettingsEditor.WPF.ViewModelInterfaces"
    Title="Exporteren"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewModelInterfaces:IExportWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Style="{StaticResource TitleTextBlock}" Text="Locatie" />
            <ComboBox
                materialDesign:HintAssist.Hint="Partitie"
                IsEditable="False"
                ItemsSource="{Binding Partitions}"
                SelectedItem="{Binding SelectedPartition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="De partitie waar de instellingen naar geëxprteerd moeten worden" />
        </StackPanel>
    </Grid>
</Window>
