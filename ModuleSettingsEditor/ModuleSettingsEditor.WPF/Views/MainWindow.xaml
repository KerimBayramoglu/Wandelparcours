<Window
    x:Class="ModuleSettingsEditor.WPF.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModelInterfaces="clr-namespace:ModuleSettingsEditor.WPF.ViewModelInterfaces"
    Title="Module settings"
    d:DataContext="{d:DesignInstance viewModelInterfaces:IMainWindowViewModel}"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="2,4,2,2" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="2,2,2,4" />
                </Style>
            </StackPanel.Resources>


            <TextBlock Text="IP-Adressen" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    materialDesign:HintAssist.Hint="Rest server IP"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Settings.RestServerIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Column="1"
                    materialDesign:HintAssist.Hint="Portnumber"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Settings.RestServerPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Column="0"
                    materialDesign:HintAssist.Hint="Socket IP"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Settings.SocketIP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Column="1"
                    materialDesign:HintAssist.Hint="Portnumber"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding Settings.SocketPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>


            <TextBlock Text="Wifi instellingen" />

            <TextBox
                materialDesign:HintAssist.Hint="SSID"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding Settings.WifiSSID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                materialDesign:HintAssist.Hint="WPA/PSK"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding Settings.WifiWPA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Command="{Binding OpenCommand}" Content="Open" />
                <Button
                    Margin="10"
                    Command="{Binding SaveCommand}"
                    Content="Save" />
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>